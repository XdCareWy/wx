/**index.wxss**/

page {
  background-color: #efeff4;
}

.title {
  font-size: 60rpx;
  display: flex;
  justify-content: center;
  border-bottom: 1px solid #dfdfdf;
  background-color: #fff;
  height: 120rpx;
  line-height: 120rpx;
  margin-bottom: 14rpx;
}

.card {
  background-color: #fff;
  padding-bottom: 10rpx;
}

.line-left {
  margin-right: 20rpx;
}
.line-right {
  margin-left: 20rpx;
}
.line {
  display: inline-block;
  width: 28rpx;
  height: 2rpx;
  background-color: #d9d9d9;
  vertical-align: middle;
}

.card-title {
  font-size: 40rpx;
  text-align: center;
  border-bottom: 1rpx solid #dfdfdf;
  padding: 20rpx 0;
}

.card-group {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin: 20rpx;
}

.card-item {
  width: 347rpx;
  height: 240rpx;
}
.card-img {
  width: 100%;
  height: 190rpx;
}

.card-img image {
  width: 100%;
  height: 100%;
}

.card-text {
  font-size: 32rpx;
}
