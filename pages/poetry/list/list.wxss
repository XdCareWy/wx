/* pages/poetry/list/list.wxss */
Page {
  background-color: #dfdfdf;
}

.poetry-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 200rpx;
  background-color: #fff;
  margin: 10rpx;
  padding: 0 22rpx;
}
.poetry-item .title {
  width: 80%;
  display: -webkit-box;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.poetry-item .img {
  width: 50px;
  height: 50px;
}