/* pages/poetry/add.wxss */
Page {
  background-color: #dfdfdf;
  font-size: 35rpx;
}
.section {
  background-color: #fff;
  margin-top: 15rpx;
}

.item {
  margin-left: 30rpx;
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #dfdfdf;
}
.content:active {
  background-color: #dfdfdf;
}

.item .right {
  padding-right:25rpx;
  display: flex;
}
.item .right .right-title {
  padding-right: 20rpx;
  width: 340rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  text-align: right;
}
.item .right .right-icon {
  color: #dfdfdf;
}
.hidden {
  visibility: hidden;
  display: none;
}
.upload-title {
  margin-left: 30rpx;
  display: flex;
  justify-content: space-between;
  padding-top: 30rpx;
}
.img-card {
  display: flex;
  margin:20rpx;
  flex-wrap: wrap;
}
.img-show {
  width:200rpx;
  height:200rpx;
  margin:10rpx;
}
.img-show image {
  width: 100%;
  height: 100%;
}
.upload {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width:200rpx;
  height:200rpx;
  border:6rpx solid#dfdfdf;
  color: #dfdfdf;
  margin:10rpx;
}
.upload:active {
  background-color: #dfdfdf;
  color: #fff;
}
.plus {
  font-size: 70rpx;
}
.btn-submit {
  margin-top: 150rpx;
}
.btn-submit > button {
  width: 720rpx;
}
.msg {
  background-color: #e64340; 
  font-size: 34rpx;
  color: #ffffff;
  line-height: 53rpx;
  text-align: center;
  position: absolute;
  top: 0;
  width: 100%;
}